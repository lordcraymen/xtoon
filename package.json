{
  "name": "xtoon",
  "version": "0.0.0-dev",
  "description": "A tool that **expands** XTOON authoring syntax into plain XML and **lints** authoring blocks for determinism",
  "keywords": [
    "xml",
    "compaction",
    "structured",
    "data",
    "efficient",
    "semantic",
    "markup"
  ],
  "homepage": "https://github.com/lordcraymen/xtoon#readme",
  "bugs": {
    "url": "https://github.com/lordcraymen/xtoon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lordcraymen/xtoon.git"
  },
  "license": "MIT",
  "author": "Florian \"lordcraymen\" Patzke",
  "type": "module",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "commit": "git-cz",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "semantic-release": "^22.0.12",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "tsup": "^8.5.0"
  }
}
